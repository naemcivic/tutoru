  <h2>Search by the subject or topic</h2>
    <%= form_tag users_path, method: :get, authentication: false, id: "search-form" do %>
      <%= text_field_tag :search, params[:search] %>
      <%= submit_tag "Search", id:"search-form-submit"%>
    <% end %>
  <% if logged_in? && current_user.student? == false %>
  <%= button_tag "Find Tutors near me", id: "search_nearby" %>
  <% end %>


